<div class="login_form">
  <%= image_tag("Logo.png", alt: "default", size: "260x100") %>
  <div class="rounded">
    <%= bootstrap_form_for [@service,@reservation] do |f| %>
        <% if @reservation.errors.any? %>
            <div class="error_messages">
              <h2>Form is invalid</h2>
              <ul>
                <% for message in @reservation.errors.full_messages %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <h3>Reservation details</h3>
        <%= f.text_field :phone, placeholder: 'Phone',label: 'Contact phone' %>
        <%= f.text_field :quantity, placeholder: 'Quantity', label: 'Number of pets' %>
        <%= f.select :pet_type, Reservation.pet_types.map { |key, value| [key.humanize, key] }, label: "Pet type"  %>
        <%= f.select :pet_size, Reservation.pet_sizes.map { |key, value| [key.humanize, key] }, label: "Pet size"  %>
        <%= f.date_field :start, label: "Start date" %>
        <%= f.date_field :end, label: "End date" %>

        <%= f.select :deliver, Reservation.deliver_types.map { |key, value| [key.humanize, key] }, label: "Pick up method"  %>



    <h3>Payment details</h3>
    <%= f.text_field :card_name, placeholder: 'Name on card', hide_label: true %>
    <%= f.text_field :card_number, placeholder: 'Number', hide_label: true %>
    <%= f.text_field :exp_month, placeholder: 'Expiration month', hide_label: true %>
    <%= f.text_field :exp_year, placeholder: 'Expiration year', hide_label: true %>
    <%= f.text_field :cvv, placeholder: 'CVV', hide_label: true %>

        <h3>Terms of booking</h3>

          <input type="checkbox"> By clicking you accept Mypetcentre <a href="#">terms and conditions</a> about service's reservations</input>

        <p>Any change or cancellation can be done 48 hours prior the start date</p>
        <%= submit_tag "Book now", class: "btn btn-primary btn-lg" %><br>
    <% end %>
    </div>
</div>