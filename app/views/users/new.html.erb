<div class="login_form">
  <div class="rounded">
    <%= image_tag("Logo.png", alt: "default", size: "260x100") %>
    <h3>Join Mypetcentre.com</h3>
    <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
            <div class="error_messages">
              <h2>Form is invalid</h2>
              <ul>
                <% for message in @user.errors.full_messages %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox">I want to receive news and deals by email
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox">Accept terms & conditions
          </label>
        </div>
        <%= submit_tag "Submit", class: "btn btn-primary btn-lg" %><br>
    <% end %>
  </div>
</div>